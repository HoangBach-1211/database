<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#DDD696"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/backgroundDangNhap"
        android:text="Danh sách món cần chế biến"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="28sp">

    </TextView>

    <ListView
        android:id="@+id/lvMonAn"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@color/backgroundtransparentGreen">

    </ListView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="25dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/speaking"
            android:layout_height="25dp">

        </ImageView>

        <TextView
            android:id="@+id/txthienghichu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Không có yêu cầu đặc biệt"
            android:textAlignment="center"
            android:background="@drawable/duong_vien"
            android:textColor="#6413F5"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtchat2"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginTop="10dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="#6413F5"
        android:textSize="18sp"
        android:textStyle="bold" />
    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#142791"
        android:background="@drawable/duong_vien"
        android:layout_alignParentBottom="true"
        android:padding="5dp">

        <EditText
            android:id="@+id/edchat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btngoii"
            android:textColorHint="#9C27B0"
            android:textColor="#3741F0"
            android:hint="Lời nhắn..." />

        <ImageButton
            android:id="@+id/btngoii"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@android:drawable/ic_menu_send" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"

        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnxacnhan"
            android:layout_width="90dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="@drawable/duong_vien55"
            android:text="Xác nhận"
            />
        <Button
            android:id="@+id/btnhoanthanh"
            android:layout_marginLeft="@dimen/size5dp"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/duong_vien55"
            android:text="Hoàn thành" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"

        android:gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/goback"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/duong_vien55"
            android:text="DS Bàn" />

    </LinearLayout>


</LinearLayout>