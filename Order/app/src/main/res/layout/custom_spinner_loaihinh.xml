<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivCustomSpinner"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/duong_vien3"
        android:src="@drawable/barschart" >

   </de.hdodenhof.circleimageview.CircleImageView>


    <TextView
        android:id="@+id/tvCustomSpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textColorHint="@color/backgroundDangNhap"
        android:text="Androchunk"
        android:textStyle="bold"
        android:background="@drawable/duong_vien5"
        android:textColor="#FFEB3B" />

</LinearLayout>