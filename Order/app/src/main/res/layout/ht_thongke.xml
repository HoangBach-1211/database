<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:orientation="vertical"
android:layout_height="match_parent"
android:background="#DDD696">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size50dp"
        android:background="@color/backgroundDangNhap"
        android:text="Thống kê"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@drawable/duong_vien"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/size50dp"
            android:src="@drawable/calendar"
            android:layout_margin="2dp"
            android:layout_height="@dimen/size50dp">

        </ImageView>

        <EditText
            android:id="@+id/chonthang"
            android:layout_width="80dp"
            android:layout_marginLeft="@dimen/size5dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:background="@drawable/duong_vien3">

        </EditText>

        <TextView
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:text=" - "
            android:layout_height="match_parent">

        </TextView>
        <EditText
            android:id="@+id/chonnam"
            android:layout_width="100dp"
            android:background="@drawable/duong_vien3"
            android:layout_height="wrap_content">

        </EditText>

        <Button
            android:id="@+id/btnloc"
            android:layout_marginLeft="@dimen/size10dp"
            android:layout_width="@dimen/size50dp"
            android:textAlignment="center"
            android:layout_margin="2dp"
            android:background="@drawable/search"
            android:layout_height="@dimen/size50dp">

        </Button>
    </LinearLayout>

    <ListView
        android:id="@+id/listviewLSthanhtoan"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:background="@drawable/duong_vien4"
        android:layout_height="420sp">


    </ListView>

    <TextView
        android:id="@+id/txtdoanhthu"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:textSize="25sp"
        android:gravity="center"
        android:background="#34BD3B"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#FCFBFA"
        android:text=""
        android:layout_height="wrap_content">

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"

        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bthomnay"
            android:layout_width="90dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="@drawable/duong_vien55"
            android:text="Hôm nay"
            />
        <Button
            android:id="@+id/btnthangnay"
            android:layout_marginLeft="@dimen/size5dp"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/duong_vien55"
            android:text="Tháng này" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"

        android:gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnnamnay"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/duong_vien55"
            android:text="Năm nay" />
        <Button
            android:id="@+id/btnall"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/size5dp"
            android:layout_weight="1"
            android:background="@drawable/duong_vien55"
            android:text="Tất cả" />
    </LinearLayout>


</LinearLayout>