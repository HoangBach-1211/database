<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="120dp"


    android:background="@drawable/bak">
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp">


        <ImageView
            android:id="@+id/hinhloadve"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/bepp">

        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView

                android:id="@+id/txtTenMonAnThanhToan"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginLeft="5dp"
                android:text="Tên món"
                android:textColor="#0000FF"
                android:textSize="28sp">

            </TextView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="              "
                android:textColor="#660099"
                android:textSize="18sp">

            </TextView>

            <TextView
                android:id="@+id/txtGiaTienThanhToan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="8dp"
                android:shadowColor="@color/colorBlack"
                android:text="Đơn giá "
                android:textColor="#660099"
                android:textSize="20sp">

            </TextView>


        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="110dp"
            android:layout_alignParentRight="true"

            android:layout_gravity="end"

            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/xx" />

        <TextView
            android:id="@+id/txtSoLuongThanhToan"
            android:layout_marginTop="10dp"
            android:layout_width="29dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="5"
            android:textAlignment="center"
            android:textColor="#0000FF"
            android:textSize="25sp">

        </TextView>
    </LinearLayout>


</LinearLayout>
