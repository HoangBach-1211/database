<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size10dp"
        android:background="@color/backgroundDangNhap"
        android:orientation="horizontal"
        >

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DS gọi món"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#FFC107"

            />

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đơn giá"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFC107"
            />

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số lượng"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#FFC107"
            />


    </LinearLayout>

    <GridView
        android:id="@+id/gvThanhToan"
        android:layout_width="match_parent"
        android:background="@drawable/nentt"
        android:layout_height="514dp"
        android:layout_weight="1"
        android:numColumns="1">

    </GridView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/speaking">

        </ImageView>

        <TextView
            android:id="@+id/txtTinhTrang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chưa gửi nhà bếp"
            android:textAlignment="center"
            android:textColor="#0B2B0D"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textStyle="bold"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txtchat1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""

            android:textAlignment="center"
            android:textColor="#673AB7"
            android:textSize="18sp"
            android:textStyle="bold"

            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/duong_vien"
        android:layout_alignParentBottom="true"
        android:padding="5dp">

        <EditText
            android:id="@+id/ghichubep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@id/chatx"
            android:hint="Lời nhắn..."
            android:textColor="#861799"
            android:textColorHint="#3741F0" />

        <ImageButton
            android:id="@+id/chatx"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@android:drawable/ic_menu_send" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txtTongTien"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:textSize="25sp"
        android:gravity="center"
        android:background="#34BD3B"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#FCFBFA"
        android:text=""
        android:layout_height="wrap_content">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"

        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnGuiBep"
            android:layout_width="90dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="@drawable/duong_vien55"
            android:text="Gửu bếp"
            />
        <Button
            android:id="@+id/inhoadon"
            android:layout_marginLeft="@dimen/size5dp"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/duong_vien55"
            android:text="In hóa đơn" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"

        android:gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/goback"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/duong_vien55"
            android:text="Bàn ăn" />
        <Button
            android:id="@+id/btnThanhToan"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/size5dp"
            android:layout_weight="1"
            android:background="@drawable/duong_vien55"
            android:text="Thanh toán" />
    </LinearLayout>


</LinearLayout>